{
	"name": "@gander-tools/osm-tagging-schema-mcp",
	"version": "0.1.0",
	"description": "MCP server for querying and validating OpenStreetMap tags",
	"type": "module",
	"main": "dist/index.js",
	"bin": {
		"osm-tagging-mcp": "dist/index.js"
	},
	"scripts": {
		"dev": "tsx --watch src/index.ts",
		"build": "tsc",
		"start": "node dist/index.js",
		"test": "node --import tsx --test tests/**/*.test.ts",
		"test:unit": "node --import tsx --test tests/**/*.test.ts --exclude tests/integration/**",
		"test:integration": "node --import tsx --test tests/integration/**/*.test.ts",
		"test:watch": "node --import tsx --test --watch tests/**/*.test.ts",
		"lint": "biome lint .",
		"format": "biome format --write .",
		"check": "biome check --write .",
		"typecheck": "tsc --noEmit"
	},
	"keywords": [
		"mcp",
		"model-context-protocol",
		"openstreetmap",
		"osm",
		"tagging",
		"schema",
		"validation"
	],
	"author": {
		"name": "Adam GÄ…sowski",
		"url": "https://github.com/gander"
	},
	"license": "GPL-3.0",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/gander-tools/osm-tagging-schema-mcp.git"
	},
	"bugs": {
		"url": "https://github.com/gander-tools/osm-tagging-schema-mcp/issues"
	},
	"homepage": "https://github.com/gander-tools/osm-tagging-schema-mcp#readme",
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.21.1",
		"@openstreetmap/id-tagging-schema": "^6.7.3",
		"cors": "^2.8.5",
		"express": "^5.1.0",
		"ws": "^8.18.3"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.4",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.5",
		"@types/node": "^24.10.0",
		"@types/ws": "^8.18.1",
		"tsx": "^4.19.2",
		"typescript": "^5.7.2"
	},
	"engines": {
		"node": ">=22.0.0"
	}
}
